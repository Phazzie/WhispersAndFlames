# Clerk Authentication (REQUIRED)
# Get from: https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here

# AI API Key - REQUIRED
# Get from: https://console.x.ai/
XAI_API_KEY=your_xai_api_key_here

# Database Configuration (optional - uses in-memory storage if not set)
# Format: postgresql://user:password@localhost:5432/database_name
DATABASE_URL=postgresql://user:password@localhost:5432/whispersandflames

# Disable Database (optional - set to 'true' to force in-memory storage)
# Use this to disable database even when DATABASE_URL is configured
# Useful for troubleshooting database issues without removing DATABASE_URL
DISABLE_DATABASE=false

# Storage Mode (postgres or memory)
# Only needed when DATABASE_URL is set
STORAGE_MODE=memory

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:9002

# Environment
NODE_ENV=development
